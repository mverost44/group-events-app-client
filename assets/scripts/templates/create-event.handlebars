
{{#with event as |event|}}
  {{log event}}

  <div data-id="{{event.id}}" class="card text-center">
  <div class="card-header">
    Your Event:
  </div>
  <div class="card-body">
    <h5 class="card-title">{{event.name}}</h5>
    <p class="card-text"><strong>Description: </strong>{{event.description}}</p>
  </div>
  <div class="card-footer text-muted">
    <button data-id="{{event.id}}" class="btn delete-event" type="submit">Delete</button>
    <button data-toggle="modal" data-target="#eventModal{{event.id}}" class="btn" type="submit">Edit</button>
  </div>
  </div>

<div class="modal fade" id="eventModal{{event.id}}" data-backdrop="false" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Create Event:</h5>
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            <form class="event" data-id="{{event.id}}">
        <div class="form-event">
          <label>Event Name:</label>
          <input type="text" name="event[name]" class="form-control" placeholder="Enter event name">
        </div>
        <div class="form-event">
          <label>Description:</label>
          <input type="text" name="event[description]" class="form-control" placeholder="Enter event description">
        </div>
        <div class="form-event">
          <label>Location:</label>
          <input type="text" name="event[location]" class="form-control" placeholder="Enter event location">
        </div>
        <div class="form-event">
          <label>Date and Time:</label>
          <input type="datetime-local" name="event[date_time]" class="form-control">
        </div>
        <button data-id="{{event.id}}" class="btn btn-primary-success"  type="submit">Submit</button>
      </form>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

{{/with}}
